rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Appointments Collection Rules
    match /appointments/{appointmentId} {
      // Allow authenticated users to read all appointments
      allow read: if request.auth != null;
      
      // Allow authenticated users to create new appointments
      allow create: if request.auth != null 
                    && request.resource.data.keys().hasAll(['clientName', 'apptDate', 'status'])
                    && request.resource.data.clientName is string
                    && request.resource.data.apptDate is string
                    && request.resource.data.status in ['Open', 'Pending', 'Upcoming', 'Completed', 'Cancelled'];
      
      // Allow authenticated users to update appointments
      allow update: if request.auth != null;
      
      // Allow authenticated users to delete appointments
      allow delete: if request.auth != null;
    }
    
    // Bills Collection Rules
    match /bills/{billId} {
      allow read, write: if request.auth != null;
    }
    
    // Customers Collection Rules
    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }
    
    // Expenses Collection Rules
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    
    // Services Collection Rules
    match /services/{serviceId} {
      allow read, write: if request.auth != null;
    }
    
    // Products Collection Rules
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    // Staff Collection Rules
    match /staff/{staffId} {
      allow read, write: if request.auth != null;
    }
    
    // Users Collection Rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
